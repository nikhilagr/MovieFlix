<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorBackgroud"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MovieDetailsActivity">

    <ImageView
        android:id="@+id/image_moviedetails"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:weightSum="10"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="8dp"
            android:textSize="18sp"
            android:id="@+id/tv_title_details"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="TITLE"
            android:textColor="@color/colorRed"/>

        <TextView
            android:gravity="right"
            android:layout_marginRight="8dp"
            android:id="@+id/tv_vote_details"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="9/10"
            android:textColor="@color/colorRed"/>
    </LinearLayout>

    <TextView
        android:textAlignment="textStart"
        android:layout_margin="8dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="16sp"
        android:text="djhfjkhsfdjkjh sdjfhsjkfh kjhsfjhk jsfhd kjhsfdkjhkjshfd kjshdfjkhsf kjshdjfhkjshkfj jsdfhkjshdf "
        android:id="@+id/tv_overview_Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"/>


</LinearLayout>